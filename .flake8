[flake8]
ignore =
    W503, # line break before binary operator
    E127, # continuation line over-indented for visual indent
    E265, # block comment should start with '# '
    E266, # too many leading '#' for block comment
    E501, # line too long (161 > 150 characters)
    F821, # undefined name '_'
    W605, # invalid escape sequence '\.'

max-line-length = 88
exclude =
    .git,
    __pycache__,
    .env,
    .venv,
    env,
    venv,
    ENV,
    env.bak,
    venv.bak,
    ctypes,
    pydispatch,
    testsuite,

per-file-ignores =
    ./actinia_core/resources/common/app.py: E402
    ./actinia_core/resources/ephemeral_processing.py: F401
    ./actinia_core/resources/common/storage_interface_gcs.py: F401
    ./actinia_core/main.py: F401
    ./actinia_core/resources/common/process_queue.py: F401
